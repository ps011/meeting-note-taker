{
  "name": "aura-meeting-recorder",
  "version": "1.0.0",
  "description": "Capture your voice - effortlessly transcribe and summarize meetings, notes, and ideas",
  "main": "electron/main/main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac:dmg": "electron-builder --mac dmg --arm64",
    "build:mac:universal": "electron-builder --mac",
    "package": "electron-builder --mac --dir",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\""
  },
  "build": {
    "appId": "com.aura.meetingrecorder",
    "productName": "Aura",
    "compression": "normal",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": {
        "target": "default",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to record meetings.",
        "NSCameraUsageDescription": "This app needs screen recording access to capture system audio during meetings.",
        "NSSystemAdministrationUsageDescription": "This app needs screen recording permission to capture audio from your meetings."
      }
    },
    "dmg": {
      "writeUpdateInfo": false
    },
    "files": [
      "electron/**/*",
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    }
  },
  "keywords": [
    "meeting",
    "transcription",
    "whisper",
    "llama",
    "obsidian",
    "electron"
  ],
  "author": "Aura Meeting Recorder",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/prasheelsoni/meeting-note-taker.git"
  },
  "homepage": "https://github.com/prasheelsoni/meeting-note-taker#readme",
  "bugs": {
    "url": "https://github.com/prasheelsoni/meeting-note-taker/issues"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "date-fns": "^2.30.0",
    "electron-store": "^8.2.0",
    "node-record-lpcm16": "^1.0.1",
    "sox-audio": "^0.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2"
  }
}
